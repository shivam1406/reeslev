<div class="footer container ff">
  <div class="row e">
    <div class="col-md-3 f">
      <span class="d">info@reeslevcph.dk</span>
    </div>
    <div class="col-md-2 c">
      <span>About</span><br>
      <span>Gavekort</span>
    </div>
    <div class="col-md-2 c">
      <span>Support</span><br>
      <span>FAQ</span><br>
      <span>Guarantees</span>
    </div>
    <div class="col-md-5 newsletter-1">
      {% if section.settings.footer_linklist_1 != blank %}
      <ul class="footer_menu">
        {% for link in linklists[section.settings.footer_linklist_1].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
        {% for sub_link in link.links %}
        <li>
          <a href="{{ sub_link.url }}">{{ sub_link.title }}</a>
        </li>
        {% for sub_sub_link in sub_link.links %}
        <li>
          <a href="{{ sub_sub_link.url }}">{{ sub_sub_link.title }}</a>
        </li>
        {% endfor %}
        {% endfor %}
        {% endfor %}
      </ul>
      {% endif %}
      {% if section.settings.footer_newsletter %}
      {% if section.settings.richtext != blank %}
      {{ section.settings.richtext }}
      {% endif %}
      {% include 'newsletter' %}
      {% endif %}

      {% if section.settings.footer_content_right != blank %}
      {{ section.settings.footer_content_right }}
      {% endif %}

      {{ section.settings.custom_html }}



      {% if section.settings.display_payment_methods %}
      <div class="payment_methods">
        {% for type in shop.enabled_payment_types %}
        {{ type | payment_type_svg_tag: class:'payment-icon' }}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
</div>
<div class="mainfooter container ff"><span class="a">Reeslev</span><br><span class="b">Håndlavede smykker</span></div>
<style>
  .ff{
    padding:30px 0px !important;
  }
  .f{
    line-height: 2.5em;
  }
  .e{
    margin: 50px 40px 50px 90px;
  }
  .d{
    font-family: Avenir-Medium, Avenir;
    font-size: 22px;
    font-weight: 400;
    color: rgb(0, 0, 0);
    text-decoration: underline;
  }
  .c{
    line-height: 2.5em;
    font-family: Avenir-Medium, Avenir;
    font-size: 18px;
    font-weight: 400;
    color: rgb(0, 0, 0);
  }
  .b{
    width: 100vw;
    font-family: Caveat-Regular, Caveat;
    font-size: 25px;
    font-weight: normal;
    color: #2d2d2c;
  }
  .a{
    width: 100vw;
    font-family: BigCaslon-Medium, "Big Caslon";
